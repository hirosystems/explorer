{
  "name": "@hiro/explorer",
  "description": "The source code for the Stacks Blockchain explorer.",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm chakra-types && next build",
    "build:analyze": "next telemetry disable && cross-env ANALYZE=true next build",
    "dev": "next dev",
    "lint": "pnpm run lint:eslint && pnpm run lint:prettier",
    "lint:eslint": "eslint --ext .ts,.tsx ./src",
    "lint:fix": "eslint --ext .ts,.tsx ./src/ -f unix --fix && prettier --write src/**/*.{ts,tsx} *.js",
    "lint:prettier": "prettier --check \"src/**/*.{ts,tsx}\" \"./*.js\" \"./*.json\"",
    "lint:prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\" *.js *.json",
    "lint:unused-exports": "ts-unused-exports tsconfig.json",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test": "jest --env=jsdom",
    "test:update-snapshots": "jest --updateSnapshot --env=jsdom",
    "test:unit": "jest --forceExit ./src",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chakra-types": "pnpm chakra typegen ./src/ui/theme/theme.ts"
  },
